 

<EditForm Model="@RoleModel" OnValidSubmit="SaveAsync">
    <FluentValidationValidator @ref="_fluentValidationValidator" />
    <MudDialog>
        <TitleContent>
            @{
                if (RoleModel.Id == null)
                {
                    <MudText Typo="Typo.h6">
                        <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
                        @Localizer["Ajouter Rôle"]
                    </MudText>
                }
                else
                {
                    <MudText Typo="Typo.h6">
                        <MudIcon Icon="@Icons.Material.Filled.Update" Class="mr-3 mb-n1" />
                        @Localizer["Mettre à jour Rôle"]
                    </MudText>
                }
                
            }
        </TitleContent>
        <DialogContent>
            <MudTextField For="@(() => RoleModel.Id)" @bind-Value="RoleModel.Id" Label="@Localizer["ID Rôle"]" Disabled />
            <MudTextField For="@(() => RoleModel.Name)" @bind-Value="RoleModel.Name" Label="@Localizer["Nom Rôle"]" />
            <MudTextField For="@(() => RoleModel.Description)" @bind-Value="RoleModel.Description" Label="@Localizer["Description"]" />
        </DialogContent>
        <DialogActions>
            <MudButton Variant="Variant.Filled" OnClick="Cancel">@Localizer["Annuler"]</MudButton>
            @{
                if (RoleModel.Id == null)
                {
                    <MudButton Variant="Variant.Filled" ButtonType="ButtonType.Submit" Disabled="@(!Validated)" Color="Color.Success">@Localizer["Enregistrer Rôle"]</MudButton>
                }
                else
                {
                    <MudButton Variant="Variant.Filled" ButtonType="ButtonType.Submit" Disabled="@(!Validated)" Color="Color.Secondary">@Localizer["Mettre à jour Rôle"]</MudButton>
                }
            }
        </DialogActions>
    </MudDialog>
</EditForm>